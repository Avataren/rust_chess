// "command": "rsync -r --update chess/assets target/debug/assets",
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "copy assets",
            "type": "shell",
            
            "command": "robocopy chess/assets target/debug/assets /E /XO /NFL; exit 0",
            "group": {
                "kind": "build",
                "isDefault": true 
            }
        },
        {
            "label": "copy assets (release)",
            "type": "shell",
            "command": "robocopy chess/assets target/release/assets /E /XO; exit 0",
            "group": {
                "kind": "build",
                "isDefault": true 
            }
        },                
        {
            "label": "cargo build",
            "dependsOn": ["copy assets"],
            "type": "shell",
            "command": "cargo build",
            "problemMatcher": [
                "$rustc"
            ],
            "group": "build"
        },        
        {
            "label": "cargo build (release)",
            "dependsOn": ["copy assets (release)"],
            "type": "shell",
            "command": "cargo build --release",
            "problemMatcher": [
                "$rustc"
            ],
            "group": "build"
        },
        {
            "label": "Build wasm",
            "type": "shell",
            "command": "cargo build --target wasm32-unknown-unknown --release",
            "problemMatcher": [
                "$rustc"
            ],
            "group": "build"
        },
        {
            "label": "wasm-bindgen",
            "type": "shell",
            "command": "wasm-bindgen",
            "args": [
                "--out-name", "chess",
                "--out-dir", "web/wasm/target",
                "--target", "web",
                "target/wasm32-unknown-unknown/release/chess.wasm"
            ],
            "dependsOn": "Build wasm",
            "problemMatcher": []
        }        
    ]
}
