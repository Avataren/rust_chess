{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug Chess",
            "program": "${workspaceFolder}/target/debug/chess.exe",
            "args": [],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "cargo build"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Run Release",
            "program": "${workspaceFolder}/target/release/chess.exe", 
            "args": [],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "cargo build (release)",
            "noDebug": true
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Web Assembly Release",
            "program": "basic-http-server",
            "args": ["web/wasm"],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "Build wasm"
        }
    ]
}
